	//initialize taco image here	
	//create psuedo element tag(in this case this is called a node) for taco.png here
	//img.setAttribute("src", "taco.png");
	//img.setAttribute("alt", "alt");
	//Indicate the container type (div) and the exact location (body>div) AND position (before/after)of where the taco image tag should be placed.	
	//Indidicate the location AND position of subsequet taco image tags should be placed
	//create the function that takes action to insert a new taco image tag to the document as stated above (needed to add.addEventListener)
	
	
		document.getElementById("button").addEventListener("click", addTaco); 
			
			var countTaco = 0;
			
			function addTaco(){
				var tacoCount = document.getElementById("tacoCount");
				countTaco++;
					if(countTaco<=10){
						var taco  = document.createElement("img");
						taco.setAttribute("src", "tacos.png");
						var gps = document.getElementById("tacoFarm");
						gps.appendChild(taco);
						tacoCount.innerHTML= countTaco;
						}
					else{
					document.getElementsByTagName("H2")[0].innerHTML="WOW! YOU MUST REALLY LUV TACOS! (^_^)";
					document.getElementById("button").style.visibility = "hidden";
					}								
	}	
	</script>
